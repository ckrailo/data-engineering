<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @merchant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @merchant.address %>
</p>

<p>
  <strong>Items:</strong>
  <table>
    <% @merchant.items.each do |item| %>
      <tr>
        <td><%= link_to item.description, item %></td>
      </tr>
    <% end %>
  </table>
</p>

<%= link_to 'Edit', edit_merchant_path(@merchant) %> |
<%= link_to 'Back', merchants_path %>
