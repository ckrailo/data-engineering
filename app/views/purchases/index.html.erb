<h1>Listing purchases</h1>

<table>
  <thead>
    <tr>
      <th>Purchaser</th>
      <th>Merchant</th>
      <th>Item</th>
      <th>Count</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= link_to purchase.purchaser.name, purchase.purchaser %></td>
        <td><%= link_to purchase.merchant.name, purchase.merchant %></td>
        <td><%= link_to purchase.item.description, purchase.item %></td>
        <td><%= purchase.count %></td>
        <td><%= price purchase.item.price %></td>
        <td><%= link_to 'Show', purchase %></td>
        <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
        <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Purchase', new_purchase_path %>
